import React from 'react';

/**
 * Primary UI component for user interaction
 */
const Button = ({ primary = false, backgroundColor = undefined, size = 'medium', label, onClick }) => {
    const mode = primary ? 'storybook-button--primary' : 'storybook-button--secondary';
    return (React.createElement("button", { type: "button", className: ['storybook-button', `storybook-button--${size}`, mode].join(' '), style: backgroundColor ? { backgroundColor: backgroundColor } : undefined, onClick: onClick }, label));
};

export { Button as default };
